<%= render "navs"%>
<div class="px-20 py-20 flex justify-center items-center">
    <table class="table-fixed relative w-[80%] text-left">
     <% @articles.each do |article| %>
        <tr class="pt-5 pb-5 border-b">
            <td class="text-l font-bold w-1/3"><%= article.created_at.strftime('%B %d, %Y')%></td>
            <td class="pt-5 pb-5">
                <p class="text-xl underline font-bold text-amber-400">
                    <%= link_to article.name, show_article_path(article)%>
                </p>
                <p class="truncate"><%= article.body %></p>
            </td>
             
        </tr>
    <% end %>
    </table>
</div>

<div id="dashboard" class="px-20 py-20 flex justify-center items-center">
    <table class='table-auto w-[80%] border-collapse'>
        <thead class="bg-amber-50 text-left">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody class="mx-2 my-2 ">
            <% @articles.each do |article| %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.name %></td>
                    <td><%= article.created_at %></td>
                    <td><%= article.updated_at %></td>
                    <td class="flex gap-5 mt-2">
                        <p class="bg-blue-200 rounded-md px-3 py-2 text-sm font-medium">
                            <%= link_to 'Edit', edit_article_path(article)%> 
                        </p>
                         <p class="bg-red-200 rounded-md px-3 py-2 text-sm font-medium">
                            <%= link_to  'Delete',delete_article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> 
                        </p>
                    </td>
                <tr>

            <% end %>
        </tbody>
    </table>
</div>
