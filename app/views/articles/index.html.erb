 
<%= link_to( 'New Article', new_article_path) %>
<table class='w-full border-collapse'>
    <thead class="bg-gray-900">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Body</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th colspan=3>Action</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.name %></td>
                <td><%= article.body %></td>
                <td><%= article.created_at %></td>
                <td class="text-red-500"><%= article.updated_at.strftime('%B %d, %Y')%> <%= article.updated_at.strftime('%H : %M, %p')%></td>
                <td><%= link_to 'Show', show_article_path(article)%></td>
                <td><%= link_to 'Edit', edit_article_path(article)%></td>
                <td><%= link_to 'Delete',delete_article_path(article), data: {
                turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
            <tr>

        <% end %>
    </tbody>
</table>

