<%= link_to( 'New Article', new_article_path) %>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.name %></td>
                <td><%= article.body %></td>
                <td><%= link_to 'Edit', edit_article_path(article)%></td>
                <td><%= link_to 'Delete',delete_article_path(article), data: {
                turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
            <tr>

        <% end %>
    </tbody>
</table>
