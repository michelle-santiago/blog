<div class="px-20 py-20 flex flex-col justify-center items-center">
    <%= form_with model: article, url: article_path, local: true do |f| %>
    <p>
        <% if article.errors.any? %>
            <ul>
                <% article.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </p>
    <p>
        <%= f.label :title%><br/>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :body %><br/>
        <%= f.text_area :body %>
    </p>

    <button class="bg-amber-200 rounded-md px-3 py-2 text-sm font-medium">
        <%=f.submit%>
    </button>

    <% end %>
</div>